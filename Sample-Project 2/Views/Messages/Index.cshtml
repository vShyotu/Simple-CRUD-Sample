@model IEnumerable<Sample_Project_2.Models.MessageEntry>

@{
    ViewBag.Title = "Index";
}

<h2>Messages</h2>

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Message)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Timestamp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Edited)
        </th>
        <th>

        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Message, "Details", new { id = item.ID })
        </td>
        <td>
            @item.Timestamp.ToLocalTime()
        </td>
        <td>
            @if (item.Edited)
            {
            <p>&check;</p>
            }
        </td>
        <td>
            <a href="@Url.Action("Edit", "Messages", new { id = item.ID })" class="btn btn-warning">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </a>

            <a href="@Url.Action("Details", "Messages", new { id = item.ID })" class="btn btn-info">
                <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
            </a>

            <a href="@Url.Action("Delete", "Messages", new { id = item.ID })" class="btn btn-danger">
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            </a>

        </td>
    </tr>
}
</table>

<p>
    @Html.ActionLink("Create New", "Create", new { controller = "MessageEntries" }, new { @class = "btn btn-success" })
</p>
